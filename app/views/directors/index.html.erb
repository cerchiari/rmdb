<div class="page-header">
  <h1>Directors</h1>
</div>

<p><%= link_to 'Add a New Director', new_director_url, class: 'btn btn-primary' %></p>

<%= paginate @directors %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Image url</th>
      <th>Dob</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.name %></td>
        <td><%= director.bio %></td>
        <td><%= image_tag director.image_url, width: 200 %></td>
        <td><%= director.dob %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, director_url(director), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_director_url(director), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, director_url(director), method: 'delete', data: { confirm: "Do you really want to delete this director?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

