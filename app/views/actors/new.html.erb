<div class="page-header">
  <h1>New Actor</h1>
</div>

<%= form_tag(actors_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :bio, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :bio, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :image_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :image_url, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dob, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dob, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Actor", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
