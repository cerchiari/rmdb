<div class="page-header">
  <h1>New Movie</h1>
</div>

<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(movies_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, @movie.title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :year, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :year, @movie.year, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :duration, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :duration, @movie.duration, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, @movie.description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :image_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :image_url, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :director_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :director_id, options_from_collection_for_select(Director.all, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Movie", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
