<div class="page-header">
  <h1>New Movie</h1>
</div>

<%= form_tag(movies_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :year, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :year, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :duration, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :duration, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :image_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :image_url, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :director_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :director_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Movie", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
