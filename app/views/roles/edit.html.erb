<div class="page-header">
  <h1>Editing Role #<%= @role.id %></h1>
</div>

<%= form_tag(role_url(@role), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :character_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :character_name, @role.character_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :movie_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :movie_id, options_from_collection_for_select(Movie.all, :id, :title, @role.movie_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :actor_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :actor_id, options_from_collection_for_select(Actor.all, :id, :name, @role.actor_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Role", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
