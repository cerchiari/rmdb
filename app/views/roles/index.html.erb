<div class="page-header">
  <h1>Roles</h1>
</div>

<%= paginate @roles %>

<p><%= link_to 'Add a New Role', new_role_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Character name</th>
      <th>Movie</th>
      <th>Actor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.character_name %></td>
        <td><%= link_to(role.movie.title, movie_url(role.movie.id)) %></td>
        <td><%= link_to(role.actor.name, actor_url(role.actor.id)) %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, role_url(role), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_role_url(role), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, role_url(role), method: 'delete', data: { confirm: "Do you really want to delete this role?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

